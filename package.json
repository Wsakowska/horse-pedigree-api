{
  "name": "horse-pedigree-api",
  "version": "1.0.0",
  "description": "REST API and frontend for horse pedigree database",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "migrate:status": "npx knex migrate:status",
    "seed": "npx knex seed:run",
    "test": "NODE_ENV=test jest --coverage --runInBand --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:backend": "NODE_ENV=test jest --selectProjects backend --runInBand --forceExit",
    "test:frontend": "NODE_ENV=test jest --selectProjects frontend --runInBand --forceExit",
    "test:integration": "NODE_ENV=test jest __tests__/integration --runInBand --forceExit",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d && sleep 5 && npm run migrate:test && npm run seed:test",
    "test:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "migrate:test": "NODE_ENV=test npx knex --knexfile knexfile.js migrate:latest",
    "seed:test": "NODE_ENV=test npx knex --knexfile knexfile.js seed:run",
    "cleanup": "node cleanup.js all",
    "cleanup:duplicates": "node cleanup.js cleanup",
    "cleanup:constraints": "node cleanup.js constraints",
    "cleanup:show": "node cleanup.js show",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:fresh": "npm run migrate:rollback && npm run migrate && npm run seed && npm run cleanup",
    "health": "curl -s http://localhost:3000/api/health | json_pp",
    "logs": "tail -f logs/app.log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "knex": "^2.5.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "horses",
    "pedigree",
    "api",
    "postgresql",
    "knex",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}