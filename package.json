{
  "name": "horse-pedigree-api",
  "version": "1.0.0",
  "description": "REST API and frontend for horse pedigree database",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "migrate:status": "npx knex migrate:status",
    "seed": "npx knex seed:run",
    "test": "jest --coverage --runInBand --forceExit",
    "test:watch": "jest --watch --runInBand",
    "test:backend": "jest --selectProjects backend --runInBand --forceExit",
    "test:frontend": "jest --selectProjects frontend --runInBand --forceExit",
    "test:integration": "jest __tests__/integration --runInBand --forceExit",
    "test:unit": "jest __tests__/backend --runInBand --forceExit",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand --forceExit",
    "test:debug": "DEBUG_TESTS=true jest --runInBand --forceExit",
    "cleanup": "node cleanup.js all",
    "cleanup:duplicates": "node cleanup.js cleanup",
    "cleanup:constraints": "node cleanup.js constraints",
    "cleanup:show": "node cleanup.js show",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:fresh": "npm run migrate:rollback && npm run migrate && npm run seed && npm run cleanup",
    "db:test:setup": "NODE_ENV=test npm run migrate && npm run seed",
    "db:test:reset": "NODE_ENV=test npm run migrate:rollback && npm run db:test:setup",
    "health": "curl -s http://localhost:3000/api/health | json_pp",
    "logs": "tail -f logs/app.log",
    "lint": "eslint src __tests__ --ext .js",
    "lint:fix": "eslint src __tests__ --ext .js --fix",
    "validate": "npm run lint && npm run test:ci",
    "precommit": "npm run lint && npm run test:unit",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "knex": "^2.5.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "babel-jest": "^29.7.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "uuid": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "public/**/*.js",
      "!src/migrations/**",
      "!src/seeds/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "projects": [
      {
        "displayName": "backend",
        "testMatch": ["<rootDir>/__tests__/backend/**/*.test.js"],
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/__tests__/backend/setup.js"]
      },
      {
        "displayName": "frontend",
        "testMatch": ["<rootDir>/__tests__/frontend/**/*.test.js"],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["<rootDir>/__tests__/frontend/setup.js"]
      },
      {
        "displayName": "integration",
        "testMatch": ["<rootDir>/__tests__/integration/**/*.test.js"],
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/__tests__/backend/setup.js"]
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true,
      "browser": true
    },
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 2],
      "no-trailing-spaces": "error",
      "eol-last": "error",
      "jest/expect-expect": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/prefer-to-have-length": "warn"
    },
    "ignorePatterns": [
      "node_modules/",
      "coverage/",
      "logs/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run validate"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "horses",
    "pedigree",
    "api",
    "postgresql",
    "knex",
    "express",
    "breeding",
    "genealogy",
    "rest-api",
    "nodejs"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/horse-pedigree-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/horse-pedigree-api/issues"
  },
  "homepage": "https://github.com/yourusername/horse-pedigree-api#readme",
  "coverage": {
    "statements": 85,
    "branches": 80,
    "functions": 85,
    "lines": 85
  }
}